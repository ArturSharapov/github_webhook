{
  "compilerOptions": {
    "allowJs": false,
    "strict": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": ["camelcase", "default-param-last", "eqeqeq", "no-eval", "no-sparse-arrays"]
    }
  },
  "fmt": {
    "options": {
      "useTabs": false,
      "lineWidth": 120,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "always",
      "semiColons": true
    }
  }
}
